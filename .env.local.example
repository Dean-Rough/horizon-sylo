# Supabase Configuration
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key
NEXT_PUBLIC_OPENAI_ASSISTANT_KEY=your_openai_assistant_key

# Stripe Configuration (for subscriptions/payments)
# Get these from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Site URL (for production deployment)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# AWS S3 Configuration (optional - for file uploads)
# NEXT_PUBLIC_AWS_S3_REGION=your_aws_region
# NEXT_PUBLIC_AWS_S3_ACCESS_KEY_ID=your_aws_access_key
# NEXT_PUBLIC_AWS_S3_SECRET_ACCESS_KEY=your_aws_secret_key
# NEXT_PUBLIC_AWS_S3_BUCKET_NAME=your_bucket_name